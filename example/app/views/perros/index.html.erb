<p id="notice"><%= notice %></p>

<h1>Listing Perros</h1>

<table border="1">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Raza</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perros.each do |perro| %>
      <tr>
        <td><%= perro.nombre %></td>
        <td><%= perro.edad %></td>
        <td><%= perro.raza.raza_nombre%></td>
        <td><%= link_to 'Show', perro %></td>
        <td><%= link_to 'Edit', edit_perro_path(perro) %></td>
        <td><%= link_to 'Destroy', perro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

