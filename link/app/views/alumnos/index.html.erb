<p id="notice"><%= notice %></p>

<h1>Listado de Alumnos</h1>

<table border="5" >
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Matricula</th>
      <th>Asignatura</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.nombre %></td>
        <td><%= alumno.apellido %></td>
        <td><%= alumno.matricula %></td>
        <td><%= alumno.asignatura.nombre %></td>
        <td class="btn btn-success" ><%=  link_to 'Detalles',  alumno %></td>



 



        <td class="btn btn-info" ><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
        <td class="btn btn-danger" ><%= link_to 'Eliminar', alumno, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

